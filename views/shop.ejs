<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>BikeShop - Shop</title>

    <!--Link Bootstrap-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous">
    </script>

    <!--Link CSS-->
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">

    <!--Link Fontawesome-->
    <script src="https://kit.fontawesome.com/b4579259c4.js"></script>
</head>

<body>

    <div class="container">
        <!--The header-->
        <div class="row" id="card-header">
            <div class="col-12">
                <i class="fa fa-shopping-cart" aria-hidden="true"></i> my Basket
            </div>
        </div>


        <!--Navbar-->
        <nav id="card-breadcrumb" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.ejs">Shop</a></li>
                <li class="breadcrumb-item active" aria-current="page">Basket</li>
            </ol>
        </nav>

        <!--Shopping basket-->
        <h1>Basket</h1>
        <div class="row" id="card-libelle">
            <div class="col-5 col-sm-3">Picture</div>
            <div class="col-4 d-none d-sm-block">Model</div>
            <div class="col-3 col-sm-2">Quantity</div>
            <div class="col-2 col-sm-1">Price</div>
            <div class="col-1 d-none d-sm-block">Total</div>
            <div class="col-2 col-sm-1">Suppr</div>
        </div>

        <!--Basket-->
        <!--Picture + Model first bike-->
        <% var totalBasket = 0;
        for(var i = 0 ; i < dataCardBike.length ; i++){ %>
        <div class="row card-product">
            <div class="col-5 col-sm-3"><img class="bike-picture" src="<%=dataCardBike[i].url%>"></div>
            <div class="col-4 d-none d-sm-block">
                <p><%=dataCardBike[i].name%></p>
            </div>

            <!--Quantity-->
            <div class="col-3 col-sm-2">
                <div class="row">
                    <div class="col-8">
                        <input type="text" value="1" class="form-control form-control-sm">
                    </div>

                    <!--Refresh-->
                    <div class="col-4">
                        <button type="button" class="btn btn-outline-info btn-sm" name="button"><i class="fa fa-refresh"
                                aria-hidden="true"></i></button>
                    </div>
                </div>
            </div>

            <!--Price-->
            <div class="col-2 col-sm-1"><%=dataCardBike[i].price%></div>

            <!--Total-->
            <div class="col-1 d-none d-sm-block"><%=dataCardBike[i].price*dataCardBike[i].quantity%></div>

            <!--Suppr-->
            <div class="col-2 col-sm-1"><button type="button" class="btn btn-outline-info btn-sm" name="button"><i
                        class="fa fa-trash-o" aria-hidden="true"></i></button></div>
        </div>

        <% } %>



        <!--Total basket-->
        <div class="row" id="card-total">
            <div class="col-8 col-sm-10 text-right">Total basket: </div>
            <div class="col-4 col-sm-2"><%=totalBasket%>â‚¬</div>
        </div>

        <!--Checkout button-->
        <div class="row" id="card-checkout">
            <div class="col-12 text-right"><button type="button" class="btn btn-outline-info btn-sm"
                    name="button">Checkout</button></div>
        </div>

    </div>
</body>

</html>